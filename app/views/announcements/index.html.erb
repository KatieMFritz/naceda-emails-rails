<p id="notice"><%= notice %></p>

<h1>All Saved Announcements</h1>

<table class="table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Date</th>
      <th>Sender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.subject %></td>
        <td><%= announcement.date %></td>
        <td><%= announcement.sender %></td>
        <td><%= link_to 'Preview', announcement, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_announcement_path(announcement), :class => "btn btn-info" %></td>
        <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure? This cannot be undone.' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Announcement', new_announcement_path, :class => "btn btn-success" %>
